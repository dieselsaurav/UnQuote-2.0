
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		style="@style/ActionBarCompat"
            android:stretchColumns="1">
    <TableRow android:id="@+id/TableRow01" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        <TextView android:text="@string/UnQuote"
            		android:id="@+id/txtUnquote" style="@style/ActionBarAppName"/>
        <LinearLayout ></LinearLayout>
        <LinearLayout>
			<ImageButton android:id="@+id/btnFav"
		        	android:src="@drawable/favlink"
		        	android:background="#00AEEF"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingTop="9dip"
		            android:paddingBottom="10dip"/>
			
			<ImageButton android:id="@+id/btnShare"
		        	android:src="@drawable/sharelink"
		        	android:background="#00AEEF"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:paddingRight="10dip"
		            android:paddingLeft="8dip"
		            android:paddingTop="10dip"
		            android:paddingBottom="10dip"/>
		</LinearLayout>
    </TableRow>    
</TableLayout>
 
    